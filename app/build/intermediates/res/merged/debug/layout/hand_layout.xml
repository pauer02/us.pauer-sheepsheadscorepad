<LinearLayout xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/handlayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">
	<LinearLayout
		android:id="@+id/scorelayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"> 

	    <TextView
	    	android:id="@+id/pc_handNum"
	    	android:layout_width="2dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/numBoxWeight"
	    	android:background="#FFFFFF"
	    	android:clickable="false"
	    	android:gravity="center"
	    	android:textSize="12sp"
	    	android:textStyle="bold" />

	    <View
	        android:layout_height="fill_parent"
	        android:layout_width="0.2dp"
	        android:visibility="visible"
	        android:background="@android:color/black"/>
		<TextView
	    	android:id="@+id/pc_Score1"
	    	android:layout_width="8dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/scoreBoxWeight"
	    	android:background="#FFFFFF"
	    	android:clickable="true"
	    	android:gravity="center"
	    	android:onClick="onScoreClick"
	    	android:textSize="24sp"
	    	android:textStyle="bold" />

	    <View
	        android:layout_height="fill_parent"
	        android:layout_width="0.2dp"
	        android:visibility="visible"
	        android:background="@android:color/black"/>
	    <TextView
	    	android:id="@+id/pc_Score2"
	    	android:layout_width="8dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/scoreBoxWeight" 
	    	android:background="#FFFFFF"
	    	android:textSize="24sp"
	    	android:textStyle="bold"
	    	android:gravity="center"
	    	android:clickable="true"
	    	android:onClick="onScoreClick" />
	    <View
	        android:layout_height="fill_parent"
	        android:layout_width="0.2dp"
	        android:visibility="visible"
	        android:background="@android:color/black"/>
	    <TextView
	    	android:id="@+id/pc_Score3"
	    	android:layout_width="8dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/scoreBoxWeight"
	    	android:background="#FFFFFF"
	    	android:textSize="24sp"
	    	android:textStyle="bold"
	    	android:gravity="center"
	    	android:clickable="true"
	    	android:onClick="onScoreClick" />
	    <View
	        android:layout_height="fill_parent"
	        android:layout_width="0.2dp"
	        android:visibility="visible"
	        android:background="@android:color/black"/>
	    <TextView
	    	android:id="@+id/pc_Score4"
	    	android:layout_width="8dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/scoreBoxWeight" 
	    	android:background="#FFFFFF"
	    	android:textSize="24sp"
	    	android:textStyle="bold"
	    	android:gravity="center"
	    	android:clickable="true"
	    	android:onClick="onScoreClick" />
	    <View
	        android:layout_height="fill_parent"
	        android:layout_width="0.2dp"
	        android:visibility="visible"
	        android:background="@android:color/black"/>
	    <TextView
	    	android:id="@+id/pc_Score5"
	    	android:layout_width="8dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/scoreBoxWeight" 
	    	android:background="#FFFFFF"
	    	android:textSize="24sp"
	    	android:textStyle="bold"
	    	android:gravity="center"
	    	android:clickable="true"
	    	android:onClick="onScoreClick" />
	    <View
	        android:layout_height="fill_parent"
	        android:layout_width="0.2dp"
	        android:visibility="visible"
	        android:background="@android:color/black"/>
	    <TextView
	    	android:id="@+id/pc_Score6"
	    	android:layout_width="8dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/scoreBoxWeight" 
	    	android:background="#FFFFFF"
	    	android:textSize="24sp"
	    	android:textStyle="bold"
	    	android:gravity="center"
	    	android:clickable="true"
	    	android:onClick="onScoreClick" />
	    <View
	        android:layout_height="fill_parent"
	        android:layout_width="0.2dp"
	        android:visibility="visible"
	        android:background="@android:color/black"/>
	    <TextView
	    	android:id="@+id/pc_Score7"
	    	android:layout_width="8dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/scoreBoxWeight" 
	    	android:background="#FFFFFF"
	    	android:textSize="24sp"
	    	android:textStyle="bold"
	    	android:gravity="center"
	    	android:clickable="true"
	    	android:onClick="onScoreClick" />
	    <View
	        android:layout_height="fill_parent"
	        android:layout_width="4dp"
	        android:visibility="visible"
	        android:background="@android:color/black"/>

	    <LinearLayout
	    	android:id="@+id/endScoreLayout"
	    	android:layout_width="0dp"
	    	android:layout_height="match_parent"
	    	android:layout_weight="@integer/buttonBoxWeight"
	    	android:orientation="vertical" >

    		<LinearLayout
    			android:id="@+id/endScoreTop"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:orientation="horizontal" 
    			android:layout_marginLeft="3dp"
                android:weightSum="1"
				android:gravity="fill_horizontal">

                <Button
    				android:id="@+id/buttonPickerStatus"
    				android:layout_width="fill_parent"
    				android:layout_height="fill_parent"
    				android:onClick="onPickerStatusButtonClick"
    				android:text="@string/spaces"
    				android:textSize="@dimen/SmallText" />
    		</LinearLayout>
    		<LinearLayout
    			android:id="@+id/endScoreMiddle"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:orientation="horizontal" 
    			android:layout_marginLeft="3dp">

                <Button
    				android:id="@+id/buttonDoubler"
    				android:layout_width="fill_parent"
    				android:layout_height="31dp"
    				android:onClick="onDoublerButtonClick"
    				android:text="@string/add_doubler"
    				android:textSize="@dimen/SmallText"
    				android:layout_gravity="center"/>
    		</LinearLayout>
    		<LinearLayout
    			android:id="@+id/endScoreBottom"
    			android:layout_width="fill_parent"
    			android:layout_height="wrap_content"
    			android:orientation="horizontal"
                android:weightSum="1">
    		
		     	<Button
		    		android:id="@+id/buttonScore"
		    		android:layout_width="fill_parent"
		    		android:layout_height="36dp"
		    		android:onClick="onScoreHandButtonClick"
		    		android:text="@string/scoreHand"
		    		android:textSize="@dimen/SmallText" />
		    </LinearLayout>

	    </LinearLayout>

    </LinearLayout>
    <View
       	android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:id="@+id/hand_separator_vert"
        android:visibility="visible"
        android:background="@android:color/black"/> 

</LinearLayout>