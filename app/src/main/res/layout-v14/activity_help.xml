<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="us.pauer.android.sheepsheadscorepad.HelpActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/NewGameHelpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_game_click_here" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/newgame" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06" />

        <TextView
            android:id="@+id/AddPlayerHelpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/add_player_click_here" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/addplayer" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"
            tools:targetApi="ice_cream_sandwich" />

        <TextView
            android:id="@+id/SetPlayerRoleHelpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set Player, Picker and Partner:" />

        <TextView
            android:id="@+id/setPlayerHelpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/the_grey_boxes_"
            android:textSize="12sp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/playercolorsplus" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"/>

        <TextView
            android:id="@+id/ScoreHandHelpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scoreHand" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/scorebuttonplus" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"/>

        <TextView
            android:id="@+id/SetPenaltyHelpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/penalty_label" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/playerdialogplus" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/playerpenalty" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"/>

        <TextView
            android:id="@+id/PlayerNoteHelpText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/AddNote" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/playernote" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.07"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:onClick="onCancelClick"
            android:text="Close" />
    </LinearLayout>

</RelativeLayout>
